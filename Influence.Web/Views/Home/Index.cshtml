@model Influence.Web.Models.HomeModel
@{ var norCult = new System.Globalization.CultureInfo("nb-NO"); }

<style>
    td { white-space: nowrap }
</style>

<h1>Sessions</h1>
@Html.ActionLink("Create new session", "CreateSession")
<br/><br/><br/>

<table>
    <tr>
        <th></th>
        <th>Id</th>
        <th>Name</th>
        <th>Created</th>
        <th>Type</th>
        <th>State</th>
        <th>Players</th>
    </tr>

    @foreach (var session in Model.Sessions)
    {
        <tr>
            <td>@Html.ActionLink("View", "Index", new { controller = "Session", sessionId = session.Id })</td>
            <td>@session.Id</td>
            <td>@session.Name</td>
            <td>@session.CreationTime.ToString("g", norCult)</td>
            <td>@(session.IsTournamentSession ? "Tournament" : "Regular")</td>
            <td>@session.GameState.GamePhase</td>
            <td>@(session.Players.Any() ? session.Players.Select(p => p.Name).Aggregate((x, y) => x + ", " + y) : "None")</td>
        </tr>
    }
</table>
