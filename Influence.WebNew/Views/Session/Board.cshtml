@model Influence.Domain.Board

<br/>

<table id="tableBoard">
    @for (int y = 0; y < Model.Size; y++)
    {
        <tr>
            @for (int x = 0; x < Model.Size; x++)
            {
                var tile = Model.GetTile(x, y);

                <td style="background-color: rgb(@tile.OwnerColorRgbCsv)">
                    @if (tile.NumTroops > 0)
                    {
                        @tile.NumTroops
                    }
                </td>
            }
        </tr>
    }

</table>

<script src="/Scripts/jquery-3.3.1.min.js"></script>
<script>
    
    $(document).ready(function() {
        setInterval(function() {
            location.reload();
        }, 1000)
    })
</script>